<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/theme_blue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="StyledEditTextFloatingLabel" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/battleship_grey</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>
    <style name="StyledEditTextHintLayout">
        <item name="android:textColorHint">@color/battleship_grey</item>
    </style>
    <style name="StyledEditText">
        <item name="android:theme">@style/StyledEditTextTheme</item>
        <item name="android:paddingTop">4dp</item>
    </style>

    <style name="StyledEditTextTheme">
        <item name="android:imeOptions">actionNext</item>
        <item name="android:singleLine">true</item>
        <item name="colorControlNormal">@color/theme_blue</item>
        <item name="colorControlActivated">@color/theme_blue</item>
        <item name="android:textColorPrimary">@color/theme_blue</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>


</resources>
